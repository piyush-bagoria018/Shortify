# Database Configuration
MONGODB_URI=mongodb://localhost:27017/afford-medical

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourapp.com
FROM_NAME=Afford Medical

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# CORS (backend/src/app.js reads CORS_ORIGIN when NODE_ENV=production)
# In dev, all origins are allowed for easier local testing.
CORS_ORIGIN=https://your-vercel-domain.vercel.app

# Optional logging service URL (if using external logger)
LOGGING_SERVICE_URL=
